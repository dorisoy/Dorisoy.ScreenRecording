<Window x:Class="ComeCapture.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComeCapture.TestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="btnScreen" Content="开始截屏" Click="btnScreen_Click"/>
        <Border x:Name="CatchPoint">
            <TextBlock x:Name="ShowPoint"  Text="坐标"  VerticalAlignment="Center"  HorizontalAlignment="Center"   FontSize="18"/>
        </Border>
        <TextBlock x:Name="ShowScreenScale"  Text="比例"  VerticalAlignment="Center"  HorizontalAlignment="Center"   FontSize="18"/>
    </StackPanel>
</Window>
