<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>NET48;netstandard2.0;net80;net80-windows</TargetFrameworks>
    <Platform Condition=" '$(Platform)' == '' ">x86</Platform>
    <OutputType>Library</OutputType>
  </PropertyGroup>
  <PropertyGroup>
    <StartupObject />
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Copyright>Copyright © Vasili Maslov 2013-2023</Copyright>
    <Description>A simple library for creating video files in the AVI format.</Description>
    <Authors>baSSiLL</Authors>
    <Company />
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <PackageTags>AVI video authoring encoding OpenDML</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>3.0.1</Version>
    <AssemblyVersion>$(Version).0</AssemblyVersion>
    <FileVersion>$(Version).0</FileVersion>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Release|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="readme.md" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
  </ItemGroup>
	
  <!-- References to WPF for targets on the Windows platform -->
  <ItemGroup Condition="'$(TargetFramework)' == 'NET48'">
    <Reference Include="PresentationCore" />
    <Reference Include="System.Windows" />
    <Reference Include="WindowsBase" />
  </ItemGroup>
	
  <PropertyGroup Condition="'$(TargetFramework)' == 'NET80-windows'">
    <UseWPF>true</UseWPF>
  </PropertyGroup>
	
  <!-- LameFacadeImpl is compiled in runtime from an embedded resource on .NET 4.5 -->
  <ItemGroup Condition="'$(TargetFramework)' == 'NET48'">
    <EmbeddedResource Include="Codecs\Mp3LameAudioEncoder.LameFacadeImpl.cs" />
  </ItemGroup>
	
  <ItemGroup>
    <None Update="readme.Context.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
    </None>
  </ItemGroup>
</Project>